@model CarRentalService.Models.ApplicationUser

<div class="container mt-4">
    <h2 class="mb-4 fw-bold">Complete & Verify Your Profile</h2>

    <form method="post">

        @Html.AntiForgeryToken()

        <!-- PERSONAL INFO -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header fw-bold bg-light">
                Personal Information
            </div>
            <div class="card-body">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="DateOfBirth" class="form-label"></label>

                    <input asp-for="DateOfBirth"
                           type="date"
                           class="form-control"
                           min="1940-01-01"
                           value="1940-01-01" />

                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label>Residence Address</label>
                    <input asp-for="ResidenceAddress" class="form-control" />
                    <span asp-validation-for="ResidenceAddress" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>City</label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Nationality</label>
                        <input asp-for="Nationality" class="form-control" />
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>

        <!-- DOCUMENT INFO -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header fw-bold bg-light">
                Document Information
            </div>
            <div class="card-body">

                <div class="mb-3">
                    <label>OIB</label>
                    <input asp-for="Oib" class="form-control" />
                    <span asp-validation-for="Oib" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label>Driver License Number</label>
                    <input asp-for="DriverLicenseNumber" class="form-control" />
                    <span asp-validation-for="DriverLicenseNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label>ID Card Number</label>
                    <input asp-for="IdCardNumber" class="form-control" />
                    <span asp-validation-for="IdCardNumber" class="text-danger"></span>
                </div>

            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-danger btn-lg">
                Verify Profile
            </button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
