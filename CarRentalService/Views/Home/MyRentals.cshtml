@model List<CarRentalService.Models.RentalViewModel>
@using CarRentalService.Models

@{
    ViewData["Title"] = "My Rentals";
}

<div class="container mt-4 mb-5">
    <h1 class="mb-4 fw-bold">My Rentals</h1>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success shadow-sm">
            @TempData["Msg"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm">
            You currently have no active rentals.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var r in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card shadow-sm h-100 border-0">

                        <div class="card-body">

                            <h5 class="card-title fw-bold mb-3">
                                @r.Brand @r.Model
                            </h5>

                            <!-- STATUS BADGE -->
                            <div class="mb-3">
                                <span class="badge
                                            @(r.Status == RentalStatus.Reserved ? "bg-primary" :
                                                                            r.Status == RentalStatus.Returned ? "bg-success" :
                                                                            r.Status == RentalStatus.Cancelled ? "bg-secondary" :
                                                                            "bg-dark")">
                            @r.Status
                        </span>
                    </div>

                            <p class="mb-1">
                                <strong>Pickup:</strong>
                                @r.Pickup.ToString("dd.MM.yyyy")
                            </p>

                            <p class="mb-2">
                                <strong>Return:</strong>
                                @r.Return.ToString("dd.MM.yyyy")
                            </p>

                            <hr />

                            <p class="mb-1">
                                <strong>Insurance:</strong>
                                @r.InsuranceName
                                <span class="text-muted">
                                    (@r.InsurancePricePerDay € / day)
                                </span>
                            </p>

                            <p class="mb-2">
                                <strong>Total:</strong>
                                <span class="fw-bold">
                                    @r.TotalPrice €
                                </span>
                                <span class="text-muted">
                                    (@r.TotalDays days × @r.TotalPricePerDay €)
                                </span>
                            </p>

                            <!-- PAYMENT INFO -->
                    @if (r.Status == RentalStatus.Reserved)
                            {
                                <p class="mb-1 text-warning">
                                    <strong>Deposit paid:</strong>
                                    @r.DepositAmount €
                                </p>

                                <p class="mb-2">
                                    <strong>Free cancellation until:</strong><br />
                                    @r.FreeCancellationUntil.ToString("dd.MM.yyyy")

                                    @if (r.CanFreeCancel)
                                    {
                                        <span class="badge bg-success ms-2">
                                            Refund available
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger ms-2">
                                            Non-refundable
                                        </span>
                                    }
                                </p>
                            }
                            else if (r.Status == RentalStatus.Returned)
                            {
                                <p class="mb-1 text-success">
                                    <strong>Deposit paid:</strong>
                                    @r.DepositAmount €
                                </p>

                                <p class="mb-1 text-success">
                                    <strong>Fully paid:</strong> Yes
                                </p>
                            }
                            else if (r.Status == RentalStatus.Cancelled)
                            {
                                <p class="mb-1 text-muted">
                                    Reservation cancelled.
                                </p>
                            }

                        </div>

                        <!-- ACTION BUTTONS -->
                        <div class="card-footer bg-white border-top-0 d-flex gap-2 flex-wrap">

                            @if (r.Status == RentalStatus.Reserved)
                            {
                                <form method="post"
                                      asp-action="CancelReservation"
                                      class="m-0">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden"
                                           name="rentalId"
                                           value="@r.Id" />

                                    <button type="submit"
                                            class="btn btn-outline-danger btn-sm">
                                        Cancel reservation
                                    </button>
                                </form>

                                <form method="post"
                                      asp-action="ReturnCar"
                                      class="m-0">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden"
                                           name="rentalId"
                                           value="@r.Id" />

                                    <button type="submit"
                                            class="btn btn-success btn-sm">
                                        Return car
                                    </button>
                                </form>
                            }

                        </div>

                    </div>
                </div>
            }
        </div>
    }
</div>
