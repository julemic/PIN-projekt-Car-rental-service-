@model CarRentalService.Models.AccidentReport
@using CarRentalService.Models

@{
    ViewData["Title"] = "Accident Report";
    var rentals = ViewBag.UserRentals as List<Rental> ?? new List<Rental>();
}

<div class="container mt-4 mb-5 pb-5">

    <h2 class="mb-4 fw-bold">Accident Report</h2>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success shadow-sm">@TempData["Msg"]</div>
    }

    <form method="post" asp-action="CreateAccidentReport">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- SELECT RENTAL -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-light fw-bold">Rental</div>
            <div class="card-body">

                <label class="form-label">Select rental</label>
                <select asp-for="RentalId" class="form-select" required>
                    <option value="">-- Select rental --</option>
                    @foreach (var r in rentals)
                    {
                        <option value="@r.Id">
                            #@r.Id - @r.Vehicle?.Brand @r.Vehicle?.Model (@r.Pickup.ToString("dd.MM.yyyy") → @r.Return.ToString("dd.MM.yyyy"))
                        </option>
                    }
                </select>
                <span asp-validation-for="RentalId" class="text-danger"></span>

            </div>
        </div>

        <!-- DRIVER INFO (readonly from ApplicationUser) -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-light fw-bold">1) Driver Information</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Full name</label>
                        <input asp-for="FullName" class="form-control" readonly />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">OIB</label>
                        <input asp-for="Oib" class="form-control" readonly />
                        <span asp-validation-for="Oib" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Driver license number</label>
                        <input asp-for="DriverLicenseNumber" class="form-control" readonly />
                        <span asp-validation-for="DriverLicenseNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" readonly />
                    </div>
                </div>
            </div>
        </div>

        <!-- ACCIDENT DETAILS -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-light fw-bold">2) Accident Details</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Accident date & time</label>
                        <input asp-for="AccidentDate" type="datetime-local" class="form-control" required />
                        <span asp-validation-for="AccidentDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Location</label>
                        <input asp-for="Location" class="form-control" required />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Weather conditions</label>
                        <select asp-for="Weather" class="form-select">
                            <option>Clear</option>
                            <option>Rain</option>
                            <option>Snow</option>
                            <option>Fog</option>
                            <option>Storm</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Road conditions</label>
                        <select asp-for="RoadCondition" class="form-select">
                            <option>Dry</option>
                            <option>Wet</option>
                            <option>Icy</option>
                            <option>Damaged</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Speed at moment (km/h)</label>
                    <input asp-for="Speed" type="number" class="form-control" />
                </div>

                <div class="form-check">
                    <input asp-for="PoliceNotified" class="form-check-input" />
                    <label class="form-check-label" asp-for="PoliceNotified">Police were notified</label>
                </div>
            </div>
        </div>

        <!-- DAMAGE DETAILS -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-light fw-bold">3) Damage Details</div>
            <div class="card-body">

                <div class="mb-3">
                    <label class="form-label">Damage description</label>
                    <textarea asp-for="DamageDescription" class="form-control" rows="4" required></textarea>
                    <span asp-validation-for="DamageDescription" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="OtherPartyInvolved" class="form-check-input" id="otherPartyCheck" />
                    <label class="form-check-label" for="otherPartyCheck">Other party involved?</label>
                </div>

                <div id="otherPartySection" class="other-party-section">
                    <div class="mb-3">
                        <label class="form-label">Other party name</label>
                        <input asp-for="OtherPartyName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Other party vehicle plate</label>
                        <input asp-for="OtherPartyPlate" class="form-control" />
                    </div>
                </div>

            </div>
        </div>

        <div class="text-end mt-4">

            <!-- SAVE -->
            <button type="submit"
                    class="btn btn-danger btn-lg"
                    formaction="@Url.Action("CreateAccidentReport", "Home")">
                Submit Report
            </button>

            <!-- SAVE + PDF -->
            <button type="submit"
                    class="btn btn-outline-dark btn-lg"
                    formaction="@Url.Action("CreateAccidentReportPdf", "Home")">
                Save as PDF
            </button>

        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/accidentreport.js" asp-append-version="true"></script>
}
