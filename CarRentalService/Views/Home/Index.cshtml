@{
    ViewData["Title"] = "Home";
}

<section class="home" id="home">
    <div class="home-text">
        <h1>Car Rental Service</h1>
        <p>
            We have every car you need for your next trip — choose a car, book fast, and drive with confidence.
        </p>

        <a asp-controller="Home" asp-action="Cars" class="btn">Discover now...</a>
    </div>
</section>

<section class="cars" id="cars">
    <div class="heading">
        <h2 style="font-family: 'Trebuchet MS', sans-serif; font-size: 58px;">
            We have all types of cars
        </h2>

        <img src="~/css/cars.jpg" alt="Cars" />
        <p>Pick your favorite brand and drive with style.</p>
    </div>

    <div class="cars-container container">
        <div class="box">
            <a href="https://www.audi.hr" target="_blank" rel="noopener">
                <img src="~/css/audi.png" alt="Audi" />
            </a>
        </div>

        <div class="box"><img src="~/css/bmw.jpg" alt="BMW" /></div>
        <div class="box"><img src="~/css/citroen.png" alt="Citroen" /></div>
        <div class="box"><img src="~/css/ford.png" alt="Ford" /></div>
        <div class="box"><img src="~/css/Kia.png" alt="Kia" /></div>
        <div class="box"><img src="~/css/lambor.png" alt="Lamborghini" /></div>
        <div class="box"><img src="~/css/McLaren.png" alt="McLaren" /></div>
        <div class="box"><img src="~/css/mercedes.png" alt="Mercedes" /></div>
        <div class="box"><img src="~/css/nissan.jpg" alt="Nissan" /></div>
        <div class="box"><img src="~/css/peugeot.png" alt="Peugeot" /></div>
        <div class="box"><img src="~/css/porsche.jpg" alt="Porsche" /></div>
        <div class="box"><img src="~/css/renault.png" alt="Renault" /></div>
    </div>
</section>

<section class="about container" id="about" style="display:flex; justify-content:center;">
    <div class="about-text">
        <span>About us</span>
        <h2>Affordable rentals with quality cars</h2>
        <p>
            Car Rental Service brings you flexible rental options, transparent pricing and well-maintained vehicles.
        </p>

        <a asp-controller="Home" asp-action="Cars" class="btn">Learn more...</a>
    </div>
</section>

