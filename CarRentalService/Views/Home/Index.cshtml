@{
    ViewData["Title"] = "Home";
}

<!-- HERO -->
<section class="hero-section">
    <div class="hero-content">
        <h1>Drive Your Dream Car</h1>
        <p>
            Premium vehicles. Transparent pricing. Zero stress.
            Book in minutes and enjoy the ride.
        </p>

        <a asp-controller="Home"
           asp-action="Cars"
           class="primary-btn">
            Explore Cars
        </a>
    </div>
</section>


<!-- BRANDS -->
<section class="brands-section container">
    <h2 class="section-title">Premium Brands</h2>

    <div class="brand-grid">
        <img src="~/images/audi.png" alt="Audi" />
        <img src="~/images/bmw.jpg" alt="BMW" />
        <img src="~/images/mercedes.png" alt="Mercedes" />
        <img src="~/images/porsche.jpg" alt="Porsche" />
        <img src="~/images/lambor.png" alt="Lamborghini" />
        <img src="~/images/McLaren.png" alt="McLaren" />
    </div>
</section>


<!-- FEATURED CARS -->
<section class="featured-section">
    <div class="container">
        <h2 class="section-title">Featured Cars</h2>

        <div class="card-grid">

            <div class="car-card">
                <img src="~/images/audi_a5.png" alt="Audi A5" />
                <div class="card-body">
                    <h3>Audi A5</h3>
                    <p>From 52€ / day</p>
                    <a asp-controller="Home"
                       asp-action="Cars"
                       class="secondary-btn">
                        Rent Now
                    </a>
                </div>
            </div>

            <div class="car-card">
                <img src="~/images/peugeot_208.png" alt="Peugeot 208" />
                <div class="card-body">
                    <h3>Peugeot 208</h3>
                    <p>From 28€ / day</p>
                    <a asp-controller="Home"
                       asp-action="Cars"
                       class="secondary-btn">
                        Rent Now
                    </a>
                </div>
            </div>

            <div class="car-card">
                <img src="~/images/vw-golf-8.png" alt="VW Golf 8" />
                <div class="card-body">
                    <h3>VW Golf 8</h3>
                    <p>From 30€ / day</p>
                    <a asp-controller="Home"
                       asp-action="Cars"
                       class="secondary-btn">
                        Rent Now
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>


<!-- BLOG PREVIEW -->
<section class="blog-preview container">
    <h2 class="section-title">Latest Articles</h2>

    <div class="card-grid">

        <div class="blog-card">
            <img src="~/images/laferari.jpg" alt="New Upcoming Cars" />
            <div class="card-body">
                <h3>New Upcoming Cars</h3>
                <p>Discover what’s arriving in 2026.</p>
                <a asp-controller="Blog"
                   asp-action="Index"
                   class="read-link">
                    Read More →
                </a>
            </div>
        </div>

        <div class="blog-card">
            <img src="~/images/gtr.jpg" alt="Best Car for Your Budget" />
            <div class="card-body">
                <h3>Best Car for Your Budget</h3>
                <p>Smart tips for choosing wisely.</p>
                <a asp-controller="Blog"
                   asp-action="Index"
                   class="read-link">
                    Read More →
                </a>
            </div>
        </div>

        <div class="blog-card">
            <img src="~/images/aventador.jpg" alt="How to Find Your Perfect Car" />
            <div class="card-body">
                <h3>How to Find Your Perfect Car</h3>
                <p>Luxury or economy? We help you decide.</p>
                <a asp-controller="Blog"
                   asp-action="Index"
                   class="read-link">
                    Read More →
                </a>
            </div>
        </div>

    </div>
</section>
