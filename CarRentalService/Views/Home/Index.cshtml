@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Rental Service</title>

    <link rel="stylesheet" href="~/css/css1.css">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
</head>

<body>
    <section class="home" id="home">
        <div class="home-text">
            <h1>Car Rental Service</h1>
            <p>
                We have every car you need for your next trip — choose a car, book fast, and drive with confidence.
            </p>

            <a href="#" class="btn">Discover now...</a>
        </div>
    </section>

    <section class="cars" id="cars">
        <div class="heading">
            <h2 style="font-family: 'Trebuchet MS' , sans-serif;
                font-size: 58px;">
                We have all types of cars
            </h2>
            <img src="~/css/cars.jpg">
            <p>
                Pick your favorite brand and drive with style.
            </p>
        </div>

        <div class="cars-container container">
            <div class="box">
                <a href="https://www.audi.hr">
                    <img src="~/css/audi.png" style="width:100%">
                </a>
            </div>

            <div class="box">
                <img src="~/css/bmw.jpg" style="width:100%">
            </div>

            <div class="box">
                <img src="~/css/citroen.png" style="width:100%">
            </div>

            <div class="box">
                <img src="~/css/ford.png" style="width:100%">
            </div>

            <div class="box">
                <img src="~/css/Kia.png" style="width:100%">
            </div>

            <div class="box">
                <img src="~/css/lambor.png" style="width:100%">
            </div>

            <div class="box">
                <img src="~/css/McLaren.png" style="width:100%">
            </div>

            <div class="box">
                <img src="~/css/mercedes.png" style="width:100%">
            </div>

            <div class="box">
                <img src="~/css/nissan.jpg" style="width:100%">
            </div>

            <div class="box">
                <img src="~/css/peugeot.png" style="width:100%">
            </div>

            <div class="box">
                <img src="~/css/porsche.jpg" style="width:100%">
            </div>

            <div class="box">
                <img src="~/css/renault.png" style="width:100%">
            </div>
        </div>
    </section>

    <section class="about container" id="about"
             style="display:flex; justify-content:center;">
        <div class="about-text">
            <span>About us</span>
            <h2>Affordable rentals with quality cars</h2>
            <p>
                Car Rental Service brings you flexible rental options, transparent pricing and well-maintained vehicles.
            </p>
            <a href="#" class="btn">Learn more...</a>
        </div>
    </section>

    <section class="parts" id="parts">
        <div class="heading">
            
            <h2>Our cars are always excellent</h2>
            <p>
                Here are some of our best deals going on right now.
            </p>
        </div>

        <div class="parts-container container">
            <div class="box">
                <img src="~/css/citroen_c3.png" style="width:80%">
                <h3>Citroen C3</h3>
                <span>14,25€/Per Day</span>
                <a href="#" class="btn">RENT NOW</a>
            </div>

            <div class="box">
                <img src="~/css/audi_a5.png" style="width:80%">
                <h3>Audi A5</h3>
                <span>52,25€/Per Day</span>
                <a href="#" class="btn">RENT NOW</a>
            </div>

            <div class="box">
                <img src="~/css/peugeot_208.png" style="width:80%">
                <h3>Peugeot 208</h3>
                <span>28,55€/Per Day</span>
                <a href="#" class="btn">RENT NOW</a>
            </div>

            <div class="box">
                <img src="~/css/renault-clio-2024.png" style="width:80%">
                <h3>Renault Clio</h3>
                <span>26,25€/Per Day</span>
                <a href="#" class="btn">RENT NOW</a>
            </div>

            <div class="box">
                <img src="~/css/renault-grand-coupe.png" style="width:80%">
                <h3>Renault Grand Coupe</h3>
                <span>52,25€/Per Day</span>
                <a href="#" class="btn">RENT NOW</a>
            </div>

            <div class="box">
                <img src="~/css/vw-golf-8.png" style="width:80%">
                <h3>VW Golf 8</h3>
                <span>30€/Per Day</span>
                <a href="#" class="btn">RENT NOW</a>
            </div>
        </div>
    </section>

    <section class="blog" id="blog">
        <div class="heading">
            <h2>Blog content</h2>
            <p>
                Updates, tips and rental guides.
            </p>
        </div>

        <div class="blog-container container">
            <div class="box">
                <img src="~/css/laferari.jpg" style="width:100%">
                <h3>New upcoming cars</h3>
                <span>Jan 1 2026</span>
                <p>
