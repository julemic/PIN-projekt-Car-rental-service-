@model CarRentalService.Models.ApplicationUser

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-4 mb-5">
    <h2 class="mb-4">My Profile</h2>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success">
            @TempData["Msg"]
        </div>
    }

    <form asp-action="Profile" asp-controller="Home" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="row">

            <div class="col-md-6 mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="DateOfBirth" class="form-label"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" min="1940-01-01" max="@DateTime.Today.AddYears(-18).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="ResidenceAddress" class="form-label"></label>
                <input asp-for="ResidenceAddress" class="form-control" />
                <span asp-validation-for="ResidenceAddress" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="City" class="form-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Nationality" class="form-label"></label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Oib" class="form-label"></label>
                <input asp-for="Oib" class="form-control" />
                <span asp-validation-for="Oib" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="DriverLicenseNumber" class="form-label"></label>
                <input asp-for="DriverLicenseNumber" class="form-control" />
                <span asp-validation-for="DriverLicenseNumber" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="IdCardNumber" class="form-label"></label>
                <input asp-for="IdCardNumber" class="form-control" />
                <span asp-validation-for="IdCardNumber" class="text-danger"></span>
            </div>

        </div>

        <button type="submit" class="btn btn-danger">
            Save
        </button>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}