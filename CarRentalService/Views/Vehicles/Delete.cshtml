@model CarRentalService.Models.Vehicle
@{
    ViewData["Title"] = "Delete Vehicle";
}

<h1>Delete Vehicle</h1>

<p>Are you sure you want to delete this vehicle?</p>

<ul>
    <li><b>@Model.Brand @Model.Model</b></li>
    <li>Category: @Model.Category</li>
    <li>Price: @Model.DailyPrice €</li>
    <li>Qty: @Model.TotalQuantity</li>
</ul>

<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <button class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
