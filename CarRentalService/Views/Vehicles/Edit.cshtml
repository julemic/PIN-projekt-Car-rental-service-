@model CarRentalService.Models.Vehicle
@{
    ViewData["Title"] = "Edit Vehicle";
}
<div class="admin-page">
<h1>Edit Vehicle</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-2">
        <label>Brand</label>
        <input class="form-control" asp-for="Brand" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>Model</label>
        <input class="form-control" asp-for="Model" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>Category</label>
        <input class="form-control" asp-for="Category" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>Daily Price (€)</label>
        <input class="form-control" asp-for="DailyPrice" />
        <span asp-validation-for="DailyPrice" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>Total Quantity</label>
        <input class="form-control" asp-for="TotalQuantity" />
        <span asp-validation-for="TotalQuantity" class="text-danger"></span>
    </div>

    <div class="mb-2">
        <label>ImageUrl</label>
        <input class="form-control" asp-for="ImageUrl" />
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="IsActive" />
        <label class="form-check-label">Active (show on site)</label>
    </div>

    <button class="btn">Update</button>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
