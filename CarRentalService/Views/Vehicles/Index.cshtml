@model List<CarRentalService.Models.Vehicle>

@{
    ViewData["Title"] = "Vehicles (Admin)";
}

<h1>Vehicles (Admin)</h1>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-warning" style="margin-top:10px;">
        @TempData["Msg"]
    </div>
}

<p style="margin-top:15px;">
    <a class="btn" asp-controller="Vehicles" asp-action="Create">Add Vehicle</a>
</p>

@if (Model == null || !Model.Any())
{
    <p>No vehicles in database.</p>
}
else
{
    <table class="table table-bordered" style="margin-top:10px;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Category</th>
                <th>Price / day</th>
                <th>Total Qty</th>
                <th>Active</th>
                <th style="width:220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in Model)
            {
                <tr>
                    <td>@v.Id</td>
                    <td>@v.Brand</td>
                    <td>@v.Model</td>
                    <td>@v.Category</td>
                    <td>@v.DailyPrice</td>
                    <td>@v.TotalQuantity</td>
                    <td>@v.IsActive</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@v.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@v.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

