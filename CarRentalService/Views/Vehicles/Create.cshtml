@model CarRentalService.Models.Vehicle

@{
    ViewData["Title"] = "Add Vehicle";
}

<div class="admin-page">

    <h1>Add Vehicle</h1>

    <form method="post">
        @Html.AntiForgeryToken()

        <div class="mb-2">
            <label>Brand</label>
            <input class="form-control" asp-for="Brand" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label>Model</label>
            <input class="form-control" asp-for="Model" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label>Category</label>
            <input class="form-control" asp-for="Category" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label>Daily Price (€)</label>
            <input class="form-control" asp-for="DailyPrice" />
            <span asp-validation-for="DailyPrice" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label>Total Quantity</label>
            <input class="form-control" asp-for="TotalQuantity" />
            <span asp-validation-for="TotalQuantity" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label>ImageUrl (example: /images/skoda-octavia.png)</label>
            <input class="form-control" asp-for="ImageUrl" />
        </div>

        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="IsActive" />
            <label class="form-check-label">Active (show on site)</label>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn">Save</button>
            <a class="btn btn-secondary" asp-action="Index">Back</a>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
