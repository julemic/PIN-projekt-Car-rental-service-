<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car Rental Service</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarRentalService.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/css1.css" />
    <link href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css" rel="stylesheet" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-0">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                Car Rental Service
            </a>
            <div class="collapse navbar-collapse d-sm-flex justify-content-between align-items-center w-100" id="mainNavbar">
                


                <!-- Lijeva strana gumbi -->
                <ul class="navbar-nav d-flex flex-row align-items-center gap-3 mb-0">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cars">Cars</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    </li>
                </ul>

                <!-- Desna strana gumbi -->
                <div class="d-flex align-items-center gap-3">
                    @if (User?.Identity != null && User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="nav-link text-dark" asp-controller="Vehicles" asp-action="Create">Add Vehicle</a>
                        }

                        <span class="fw-bold text-uppercase mb-0">
                            Hi! @User.Identity.Name!
                        </span>

                        <form method="post"
                              asp-area="Identity"
                              asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                              class="m-0">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    }
                </div>


            </div>



            
        </nav>
    </header>

    
    <div class="container-fluid" style="padding-top:45px;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container-fluid py-2">
            &copy; 2026 - Car Rental Service -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
