<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car Rental Service</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css" />

    <link href="https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css" rel="stylesheet" />
</head>

<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-0">
            <div class="container-fluid">

                <!-- Brand -->
                <a class="navbar-brand fw-bold"
                   asp-controller="Home"
                   asp-action="Index">
                    Car Rental Service
                </a>

                <!-- Mobile toggle -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- LEFT SIDE -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Cars">Cars</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Blog"
                               asp-action="Index">
                                Blog
                            </a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Home"
                               asp-action="Privacy">Privacy Policy</a>
                        </li>
                    </ul>

                    <!-- RIGHT SIDE -->
                    <ul class="navbar-nav ms-auto">

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">

                                <a class="nav-link dropdown-toggle fw-bold"
                                   href="#"
                                   id="userDropdown"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Hi, @User.Identity.Name
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end shadow"
                                    aria-labelledby="userDropdown">

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Home"
                                           asp-action="MyRentals">
                                            My Rentals
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Home"
                                           asp-action="RentalHistory">
                                            Rental History
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item"
                                           asp-controller="Home"
                                           asp-action="AccidentReport">
                                            Accident Report
                                        </a>
                                    </li>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Vehicles"
                                               asp-action="Index">
                                                Admin Vehicles
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Home"
                                               asp-action="AdminAccidentReports">
                                                Accident Reports (Admin)
                                            </a>
                                        </li>
                                    }

                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <form method="post"
                                              asp-area="Identity"
                                              asp-page="/Account/Logout"
                                              asp-route-returnUrl="@Url.Action("Index", "Home")"
                                              class="dropdown-item p-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-link dropdown-item">
                                                Logout
                                            </button>
                                        </form>
                                    </li>

                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-area="Identity"
                                   asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    
    <main class="flex-fill container-fluid pt-4 pb-5">
        @RenderBody()
    </main>

    
    <footer class="border-top text-muted mt-auto">
        <div class="container-fluid py-3">
            &copy; 2026 - Car Rental Service -
            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/myrentals.js" asp-append-version="true"></script>
    <script src="~/js/accidentreport.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
